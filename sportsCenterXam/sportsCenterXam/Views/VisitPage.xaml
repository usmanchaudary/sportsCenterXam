<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sportsCenterXam.Views.ActivityPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>

        <!--create a form for input for the fields in visit class which are visit date, activityEnums, and usersList-->
        <StackLayout>
            
            <Label Text="Visit Date" />
            <DatePicker x:Name="visitDate" />
            
            <Label Text="Activity" />
            <Picker x:Name="activities" Title="Activity" ItemsSource="{x:Static local:PickerPage.activityEnums}" />
            
            <Label Text="Users" />
            <Picker x:Name="users" Title="Select User" />
            
            <Button Text="Save" x:Name="Save" Clicked="Save_Clicked" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>